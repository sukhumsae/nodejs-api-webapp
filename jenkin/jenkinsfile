pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Define your GitHub repository URL
                    def gitRepoUrl = 'https://github.com/sukhumsae/nodejs-api-webapp.git'

                    // Checkout the code from the specified repository
                    checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[url: gitRepoUrl]]])
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dir('test-app') {
                        sh 'docker build -t sukhumsae/test-app:v3 .'
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    sh 'docker push sukhumsae/test-app:v3'
                }
            }
        }

        stage('Deploy Helm Chart') {
            steps {
                script {
                    dir('helm-chart/test-app-chart') {
                        sh 'helm upgrade --install test-app -n test-app -f values.yaml .'
                    }
                }
            }
        }
    }
}
